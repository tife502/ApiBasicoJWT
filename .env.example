# ==================================
# Configuración del Servidor
# ==================================

# Puerto en el que correrá el servidor
PORT=3000

# ==================================
# Base de Datos
# ==================================

# URL de conexión a MySQL
# Formato: mysql://usuario:contraseña@host:puerto/nombre_base_datos
# Ejemplo: mysql://root:password123@localhost:3306/api_jwt_db
DATABASE_URL="mysql://user:password@localhost:3306/database_name"

# ==================================
# JWT (JSON Web Token)
# ==================================

# Secreto para firmar los tokens JWT
# IMPORTANTE: Usa una cadena larga y aleatoria en producción
# Puedes generar una con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="mi_secreto_super_seguro_de_al_menos_32_caracteres_aleatorios"

# Tiempo de expiración de los tokens
# Formatos válidos: "30s", "15m", "2h", "7d", "30 days"
# s = segundos, m = minutos, h = horas, d = días
JWT_EXPIRES_IN="2h"
